<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller"
            prefHeight="400.0" prefWidth="600.0">
    <HBox fx:id="authPanel">
        <TextField promptText="Введите своё имя" fx:id="userNameField" HBox.hgrow="ALWAYS" onAction="#auth"/>
        <Button onAction="#auth" text="Авторизоваться"/>
    </HBox>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox fx:id="msgPanel" visible="false" managed="false">
        <TextField promptText="Напишите сообщение" fx:id="textField" HBox.hgrow="ALWAYS" onAction="#btnAction"/>
        <Button onAction="#btnAction" text="Отправить"/>
    </HBox>
</VBox>
